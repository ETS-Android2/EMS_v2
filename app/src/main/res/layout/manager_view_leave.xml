<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="32dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/singleLeaveViewM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewLeaveSubject"
                    android:layout_width="201dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:paddingLeft="@dimen/cardview_default_elevation"
                    android:paddingTop="@dimen/cardview_default_elevation"
                    android:paddingRight="@dimen/cardview_default_elevation"
                    android:paddingBottom="@dimen/cardview_default_elevation"
                    android:text="LeaveSubject"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/leaveStatus"
                    android:layout_width="95dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="status"
                    android:textAlignment="center"/>

            </LinearLayout>

            <Button
                android:id="@+id/approveLeaveRequest"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="151dp"
                android:layout_marginEnd="88dp"
                android:layout_marginRight="176dp"
                android:layout_marginTop="11dp"
                android:layout_toStartOf="@+id/removeLeaveRequest"
                android:backgroundTint="@color/white"
                android:forceHasOverlappingRendering="true"
                android:paddingLeft="@dimen/cardview_default_elevation"
                android:paddingTop="@dimen/cardview_default_elevation"
                android:paddingRight="@dimen/cardview_default_elevation"
                android:paddingBottom="@dimen/cardview_default_elevation"
                android:text="âœ“"
                android:textColor="@color/aquamarine"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/removeLeaveRequest"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/white"
                android:forceHasOverlappingRendering="true"
                android:paddingLeft="@dimen/cardview_default_elevation"
                android:paddingTop="@dimen/cardview_default_elevation"
                android:paddingRight="@dimen/cardview_default_elevation"
                android:paddingBottom="@dimen/cardview_default_elevation"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>


        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>